service:
  name: mock
  deployment:
    maximum_percent: 100
    minimum_healthy_percent: 0
  desired_count: 1

task:
  volumes:
    config: /etc/config.cfg
    db: /data

  containers:
    mock:
      cpu: 10
      image: http://url.local/image
      memory: 1024
      essential: True
      port_mappings:
        -
          host_port: 0
          container_port: 8000
          protocol: tcp
      mount_points:
        /etc/config.cfg:
          source_volume: config 
        /data:
          source_volume: db 

environments:
  dev:
    namespace: dev
    service:
      cluster: ecs-dev
  prd:
    namespace: release
    service:
      cluster: prd-sjc
